          <a
            href="#"
            class="hover:text-primary transition-colors"
            aria-label="Facebook"
          >
            <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
              ></path>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Orange Line -->
    <div class="border-t-2 border-primary my-8"></div>

    <!-- Bottom Section -->
    <div
      class="grid grid-cols-1 md:grid-cols-3 gap-4 text-center md:text-left font-krub text-sm"
    >
      <div>
        <p>
          HØJSKOLENDK er medlem af <a
            href="#"
            class="underline hover:text-primary">Rejsegarantifonden</a
          >.
        </p>
      </div>
      <div>
        <p class="space-x-2">
          <a href="#" class="underline hover:text-primary">Handelsbetingelser</a
          >
          <span>/</span>
          <a href="#" class="underline hover:text-primary">Cookiepolitik</a>
          <span>/</span>
          <a href="#" class="underline hover:text-primary"
            >Data- & Privatlivspolitik</a
          >
        </p>
      </div>
      <div class="md:text-right">
        <p>Copyright © HØJSKOLENDK 2022 • CVR 32491162</p>
      </div>
    </div>
  </div>
</div>
