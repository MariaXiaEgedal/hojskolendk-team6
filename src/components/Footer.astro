---
import Text from "./Text.astro";
---

<div class="bg-white py-12 px-6">
  <div class="max-w-7xl mx-auto">
    <!-- Main Footer Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12 mb-8">
      <!-- Column 1: HØJSKOLENDK -->
      <div class="text-center md:text-left">
        <h3 class="text-3xl font-lalezar text-primary mb-4">HØJSKOLENDK</h3>
        <Text teksttype="brødtekst" stylingclasses="mb-6">
          Rejs ud i verden med HØJSKOLEMDK og vend hjem med minder for livet!
        </Text>
        <div class="flex justify-center md:justify-start">
          <img src="/img/logo.svg" alt="Højskole Logo" class="w-32 h-32" />
        </div>
      </div>

      <!-- Column 2: GODT AT VIDE -->
      <div class="text-left">
        <h3 class="text-3xl font-lalezar text-primary mb-4">GODT AT VIDE</h3>
        <ul class="space-y-2 font-krub text-[18px] md:text-[20px]">
          <li><a href="#" class="hover:text-primary underline">FAQ</a></li>
          <li><a href="#" class="hover:text-primary underline">Job</a></li>
          <li>
            <a href="#" class="hover:text-primary underline">Bæredygtighed</a>
          </li>
          <li>
            <a href="#" class="hover:text-primary underline"
              >Rejsegarantifonden</a
            >
          </li>
          <li>
            <a href="#" class="hover:text-primary underline"
              >Fra tilmelding til afrejse</a
            >
          </li>
          <li>
            <a href="#" class="hover:text-primary underline"
              >Generelle bestemmelser</a
            >
          </li>
          <li>
            <a href="#" class="hover:text-primary underline"
              >Gruppereiser for unge</a
            >
          </li>
          <li>
            <a href="#" class="hover:text-primary underline">Rejs i sabbatår</a>
          </li>
        </ul>
      </div>

      <!-- Column 3: KONTAKT -->
      <div class="text-left md:text-left">
        <h3 class="text-3xl font-lalezar text-primary mb-4">KONTAKT</h3>
        <div class="font-krub text-[18px] md:text-[20px] space-y-2 mb-6">
          <p>Rosenørns Allé 31</p>
          <p>1970 Frederiksberg</p>
          <p>Danmark</p>
          <p class="mt-4">
            Telefon: <a href="tel:70279007" class="hover:text-primary"
              >7027 9007</a
            >
          </p>
          <p>Mandag til Fredag // Kl. 10.00-16.00</p>
          <p>
            Mail: <a
              href="mailto:info@hojskolendk.dk"
              class="hover:text-primary underline">info@hojskolendk.dk</a
            >
          </p>
        </div>
        <!-- Social Media Icons -->
        <div class="flex gap-4 mt-4 justify-center md:justify-start">
          <a
            href="#"
            class="hover:text-primary transition-colors"
            aria-label="Instagram"
          >
            <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
