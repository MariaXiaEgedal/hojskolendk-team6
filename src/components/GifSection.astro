---
const {
  gifSrc = "/flyrute1.gif",
  altText = "Animated GIF",
  zIndex = "0",
} = Astro.props;
---

<section
  class={`w-full overflow-hidden relative z-[${zIndex}] m-0 p-0 block leading-[0]`}
>
  <div class="relative w-full h-auto overflow-hidden">
    <img
      src={gifSrc}
      alt={altText}
      class="w-full h-auto object-cover block m-0 p-0"
      style="object-position: center; transform: scale(1.3); margin-top: -20%; margin-bottom: -5%;"
      loading="lazy"
    />
  </div>
</section>
