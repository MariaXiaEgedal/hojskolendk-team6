---
const {
  gifSrc = "/flyrute1.gif",
  altText = "Animated GIF",
  zIndex = "0",
} = Astro.props;
---

<section
  class={`w-full overflow-hidden relative z-[${zIndex}] my-0 block leading-[0]`}
>
  <img
    src={gifSrc}
    alt={altText}
    class="w-full h-auto object-cover block"
    loading="lazy"
  />
</section>
